{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "noLib": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@test/*": ["./__test__/*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}