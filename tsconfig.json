{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@test/*": ["./__test__/*"]
    }
  },
  "include": ["lib/**/*", "__test__/**/*"],
  "exclude": ["node_modules"]
}